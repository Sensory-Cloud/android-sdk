<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="inc.sensory.sensoryclouddemo.LoginFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/login_fragment">

        <action
            android:id="@+id/action_login"
            app:destination="@id/AudioFragment" />
    </fragment>
    <fragment
        android:id="@+id/AudioFragment"
        android:name="inc.sensory.sensoryclouddemo.AudioFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/audio_fragment">

        <action
            android:id="@+id/action_logout"
            app:destination="@id/LoginFragment" />
    </fragment>
</navigation>